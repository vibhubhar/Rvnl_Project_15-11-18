  insert into xx_record_actions (Document_id,CurrentDate,ActionPerformed,ActionPerformedBy,Real_ActionDate) Values ('<%=doc_id%>',now(),'referred','<%=user%>', now())
</sql:update>

			</c:if>
		</form>
