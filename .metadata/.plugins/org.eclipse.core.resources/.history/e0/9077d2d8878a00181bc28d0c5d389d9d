 $(document).ready(function(){
	var disable= $("#sStateId").val();
	
		if(disable!="0"){
			 $("#sStateId").prop("disabled", true);
		}
			 else if(disable=="0"){
				 $("#sStateId").prop("disabled",false);
			 } 
		
 })  


</script>
 